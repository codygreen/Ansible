{
    "class": "AS3",
    "action": "deploy",
    "persist": true,
    "declaration": {
        "class": "ADC",
        "schemaVersion": "3.6.0",
        "id": "ecs_test",
        "label": "ECS Test App",
        "remark": "Simple HTTP Service with Round-Robin Load Balancing",
        "VS_tenant": {
            "class": "Tenant",
            "ECS": {
                "class": "Application",
                "template": "http",
                "serviceMain": {
                    "class": "Service_HTTP",
                    "virtualAddresses": [
                        "10.1.1.14"
                    ],
                    "pool": "web_pool"
                },
                "web_pool": {
                    "class": "Pool",
                    "monitors": [
                        "http"
                    ],
                    "members": [{
                        "servicePort": 80,
                        "serverAddresses": [
                            "10.1.1.229",
                            "10.1.1.149"
                        ]
                    }]
                }
            }
        }
    }
}